Listen <%= @httpd_port %> 
NameVirtualHost *:<%= @httpd_port %> 

<VirtualHost *:<%= @httpd_port %>> 
   DocumentRoot /var/www/testserver/ 
   ServerName <%= @fqdn %> 
   
   <Directory "/var/www/testserver/"> 
      Options All Indexes FollowSymLinks 
      Order allow,deny 
      Allow from all 
   </Directory> 
</VirtualHost>